@import './colors.styl'

// #region global
body
    font-family monospace

*[title]
    cursor help

label[title]
    border-bottom 1px dotted black

br
    user-select none

// #endregion global

// #region bootstrap modifications
.m-form-control
    width 30%
    display flex

.m-btn-xs
    padding .15rem .25rem
    font-size .875rem
    line-height 1.375
    border-radius .175rem

.m-row
    align-items center

    &--nm
        margin-left 0
        margin-right 0

[data-collapsable='true']
    .card-header
        .btn-link
            box-shadow none

        [data-toggle='collapse'] .oi
            transition transform 0.3s ease
            color black
            transform rotate(180deg)

        [data-toggle='collapse'].collapsed .oi
            transform none

// #endregion bootstrap modifications

// #region bootstrap-angular modifications
form
    padding-bottom 1em

    .ng-invalid.ng-dirty[data-validate-onchange='true']
        border-color #dc3545
        padding-right calc(1.5em + 0.75rem)
        background-repeat no-repeat
        background-position right calc(0.375em + 0.1875rem) center
        background-size calc(0.75em + 0.375rem) calc(0.75em + 0.375rem)

        & ~ .invalid-feedback
            display block

// #endregion bootstrap-angular modifications

// #region icons
.oi
    cursor pointer

    &--hoverable
        &:hover
            color color-blue-sky

        &:active
            color color-blue-sky-darken

    &--sm
        font-size 0.5em

    &--md
        font-size 0.75em

    &--lg
        font-size 1.2em

    &--elg
        font-size 1.5em

// #endregion icons
.module-name
    cursor pointer
    user-select none

    &:hover
        color color-blue-sky

.hidden
    display none

.loading-cover
    position relative

    &_image-container
        position absolute
        bottom 0
        width 100%
        height 100%
        display flex
        justify-content center
        align-items flex-start

        &--center
            align-items center

        &_img
            min-height 10em

    &_content[data-disabled='true']
        opacity 0.25
        pointer-events none
        display block
        width 100%
        height auto